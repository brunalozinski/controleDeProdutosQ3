@model List<ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <div>
        <a class="btn btn-success" role="button" asp-controller="Cliente" asp-action="Criar">
            Adicionar novo cliente
        </a>
        <h2>Listar Clientes</h2>
        @ViewBag.clientes
    </div>
    <table class="table caption-top">
        <caption>Lista de Clientes</caption>
        <thead>
            <tr>
                <th scope="col">Foto</th>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">CEP</th>
                <th scope="col">Telefone</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ClienteModel cliente in Model)
                {
                    <tr class="align-baseline">
                        <td scope="col"><img src="https://cdn-icons-png.flaticon.com/512/3106/3106921.png" width="50" height="50"></td>

                        <th>@cliente.Id</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Cep</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
